{
  "name": "web2md",
  "version": "1.0.0",
  "description": "Convert HTML webpages to Markdown with customizable schemas",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "web2md": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "mocha --require tsx/cjs test/**/*.ts",
    "schema:compare": "tsx src/schemas/compare.ts"
  },
  "keywords": [
    "html",
    "markdown",
    "converter",
    "turndown"
  ],
  "author": "Ervins Strauhmanis",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "got": "^14.4.7",
    "jsdom": "^26.0.0",
    "ora": "^8.2.0",
    "turndown": "^7.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.24.0",
    "mocha": "^11.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
