{
  "name": "web2md",
  "version": "1.0.0",
  "description": "Convert HTML webpages into semantically structured Markdown documents",
  "type": "module",
  "main": "dist/app.js",
  "bin": {
    "web2md": "./bin/web2md.js"
  },
  "engines": {
    "node": "^22.14.0"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "tsx src/app.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "html",
    "markdown",
    "converter",
    "html-to-markdown",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "got": "^14.4.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "turndown": "^7.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
