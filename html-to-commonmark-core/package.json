{
  "name": "html-to-commonmark-core",
  "version": "1.0.0",
  "description": "Core engine for converting HTML to CommonMark AST and Markdown",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "node build.js",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "docs": "typedoc src/index.ts",
    "example": "node examples/basic.js"
  },
  "keywords": [
    "html",
    "markdown",
    "commonmark",
    "ast",
    "converter",
    "parser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "entities": "^6.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}